{
  "$schema": "./node_modules/nx/schemas/nx-schema.json",
  "defaultBase": "main",
  "projects": {
    "frontend": "apps/frontend",
    "backend": "apps/backend",
    "cli": "cli",
    "@primer/status-manager": "apps/backend/src/plugins/status-manager"
  },
  "targetDefaults": {
    "setup": {
      "cache": true
    },
    "lint": {
      "inputs": ["default", "{workspaceRoot}/eslint.config.mjs"]
    },
    "@nx/jest:jest": {
      "cache": true,
      "inputs": ["default", "{workspaceRoot}/jest.preset.js"],
      "options": {
        "passWithNoTests": true
      },
      "configurations": {
        "ci": {
          "ci": true,
          "codeCoverage": true
        }
      }
    }
  },
  "plugins": [
    {
      "plugin": "@nx/eslint/plugin",
      "options": {
        "targetName": "lint"
      }
    },
    {
      "plugin": "@nx/jest/plugin",
      "options": {
        "targetName": "jest:test"
      }
    }
  ]
}
