{
  "name": "primershop",
  "private": true,
  "version": "0.0.2",
  "workspaces": [
    "apps/*",
    "packages/*",
    "cli"
  ],
  "scripts": {
    "backend": "turbo dev --filter=backend",
    "cleanup": "turbo clean --filter=frontend",
    "dev": "turbo dev",
    "frontend": "turbo dev --filter=frontend",
    "lint": "turbo lint",
    "setup": "npm install",
    "prune": "rm -rf node_modules/ && rm -rf dist/ && rm -rf .turbo/ && rm -rf package-lock.json",
    "test": "turbo test -- --passWithNoTests",
    "test:watch": "turbo test --watch",
    "test:coverage": "turbo test --coverage",
    "e2e": "turbo e2e",
    "deps:check": "turbo run deps:check",
    "deps:update": "turbo run deps:update",
    "dependabot:config": "node scripts/dependabot-config.js"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.3",
    "@eslint/js": "^9.39.2",
    "@types/jest": "^30.0.0",
    "eslint": "9.39.2",
    "eslint-config-primer": "*",
    "jest": "^30.2.0",
    "npm-check-updates": "^19.3.1",
    "ts-jest": "^29.4.6",
    "turbo": "latest",
    "typescript": "^5.9.3"
  },
  "packageManager": "npm@11.8.0",
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=6.0.0"
  }
}
