{
    "version": 2,
    "projects": {
        "frontend": {
            "root": "apps/frontend",
            "sourceRoot": "apps/frontend/src",
            "projectType": "application",
            "targets": {
                "lint": {
                    "executor": "@nx/eslint",
                    "options": {
                        "lintFilePatterns": [
                            "apps/frontend/**/*.ts",
                            "apps/frontend/**/*.tsx"
                        ]
                    }
                }
            }
        },
        "backend": {
            "root": "apps/backend",
            "sourceRoot": "apps/backend/src",
            "projectType": "application",
            "targets": {
                "lint": {
                    "executor": "@nx/eslint",
                    "options": {
                        "lintFilePatterns": [
                            "apps/backend/**/*.js"
                        ]
                    }
                }
            }
        }
    }
}