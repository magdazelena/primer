{
    "version": 2,
    "projects": {
        "cli": {
            "root": "cli",
            "sourceRoot": "cli/bin",
            "projectType": "cli"
        },
        "frontend": {
            "root": "apps/frontend",
            "sourceRoot": "apps/frontend/src",
            "projectType": "application",
            "targets": {
                "lint": {
                    "executor": "@nx/eslint",
                    "options": {
                        "eslintConfig": "apps/frontend/eslint.config.mjs",
                        "lintFilePatterns": [
                            "apps/frontend/**/*.ts",
                            "apps/frontend/**/*.tsx"
                        ]
                    }
                },
                "e2e": {
                    "executor": "@nx/cypress:cypress",
                    "options": {
                      "cypressConfig": "apps/frontend/cypress.config.ts",
                      "devServerTarget": "frontend:serve"
                    }
                  }
            }
        },
        "backend": {
            "root": "apps/backend",
            "sourceRoot": "apps/backend/src",
            "projectType": "application",
            "targets": {
                "lint": {
                    "executor": "@nx/eslint",
                    "options": {
                        "eslintConfig": "apps/backend/eslint.config.mjs",
                        "lintFilePatterns": [
                            "apps/backend/**/*.js"
                        ]
                    }
                },
                "test": {
                    "executor": "@nx/jest:jest",
                    "options": {
                      "jestConfig": "apps/backend/jest.config.js",
                      "passWithNoTests": true
                    }
                  }
            }
        }
    }
}