{
    "name": "backend",
    "$schema": "../../node_modules/nx/schemas/project-schema.json",
    "sourceRoot": "apps/backend",
    "projectType": "application",
    "targets": {
        "build": {
            "executor": "@nx/js:build",
            "options": {
                "outputPath": "dist/apps/backend",
                "main": "apps/backend/src/index.ts",
                "tsConfig": "apps/backend/tsconfig.app.json"
            }
        },
        "dev": {
            "executor": "@nx/js:dev",
            "options": {
                "command": "NODE_OPTIONS='--experimental-specifier-resolution=node' strapi develop"
            }
        },
        "export": {
            "executor": "@nx/js:run-script",
            "options": {
                "command": "strapi export --no-encrypt --file seed-data"
            }
        },
        "lint": {
            "executor": "@nx/eslint",
            "options": {
                "eslintConfig": "apps/backend/eslint.config.mjs",
                "lintFilePatterns": [
                    "apps/backend/**/*.js"
                ]
            }
        },
        "seed": {
            "executor": "@nx/js:run-script",
            "options": {
                "command": "strapi import -f ./seed-data.tar.gz"
            }
        },
        "start": {
            "executor": "@nx/js:run-script",
            "options": {
                "command": "strapi start"
            }
        },
        "strapi": {
            "executor": "@nx/js:run-script",
            "options": {
                "command": "strapi"
            }
        },
        "test": {
            "executor": "@nx/jest:jest",
            "options": {
              "jestConfig": "apps/backend/jest.config.js",
              "passWithNoTests": true,
              "command": "NODE_ENV=test DATABASE_FILENAME=test.db nx run backend:test"
            }
          }
    }}