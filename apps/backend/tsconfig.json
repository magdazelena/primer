{
  "extends": "@strapi/typescript-utils/tsconfigs/server",
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": ".",
    "allowJs": true, //enables the build without .ts files
    "types": [
      "./types/generated/contentTypes.d.ts",
      "./types/generated/components.d.ts",
      "./src/plugins/status-manager/server/src/types/contentTypes.ts"
    ]
  },
  "include": [
    "./",
    "src/**/*.json",
    "./types/generated/*",
  ],
  "exclude": [
    "node_modules/",
    "build/",
    "dist/",
    ".cache/",
    ".tmp/",
    "src/admin/",
    "**/*.test.ts",
    "src/plugins/**"
  ]
}
